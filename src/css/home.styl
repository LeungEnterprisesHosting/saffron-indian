/* For the BG image slider */
html
  overflow-x hidden
body
  position relative
  overflow-x hidden
  /* Fallback background */
  background url("../img/food/naan.jpg")
  background-size cover

.bg-slider-img
  position fixed
  z-index -1
  top 0
  left 0
  min-height 100vh
  width 100%
  background-size cover
  background-position center right

#landing-jumbotron
  background rgba(255, 255, 255, 0.1)

#leungenterprises
  position fixed
  right 15px
  bottom 15px

#leungenterprises a,
a.location-link
  color #222

  &:hover
    color #111

a.location-link + .address
  margin-bottom 5px

.online-ordering-container
  position relative
  display flex
  flex-direction row
  align-items center
  justify-content center
  padding-top 15px
  padding-bottom 25px

  &::after
    content ''
    padding-top 10px
    display block
    position absolute
    bottom 0
    width 25px
    margin 0 auto
    border-top 1px solid #888

button(bg)
  display inline-block
  font-family Lato
  font-weight 700
  margin 5px
  padding 10px
  padding-left 15px
  padding-right 15px
  font-size 12px
  background bg
  border-radius 9999px
  color white

  &:hover, &:active, &:focus
    opacity 0.75
    text-decoration none
    color white

.catering-button
  button(#88bb40)

.placepull-button
  button(#B20811)

/**
 * Caviar Widget CSS
 */
.caviar-container
  text-align center
  height 70px

.caviar-merchant-widget-disc-1
  /* this is all to make it 60px and acct for scaling */
  margin-top -30px
  transform scale(0.5)

.caviar-merchant-widget-disc-1,
.caviar-merchant-widget-disc-1 a
  display inline-block
  width 120px
  min-height 120px
  padding 0

.caviar-merchant-widget-disc-1 a span
  visibility hidden

.caviar-merchant-widget-link-disc-1
  display block
  background-image url("https://img.trycaviar.com/raw/widget/v3/caviar-badges-sprite-v3.png")
  background-position -1200px -0px

.caviar-merchant-widget-link-disc-1:hover
  background-position -1320px -0px

.caviar-merchant-widget-link-disc-1:active
  background-position -1440px -0px

@media only screen and (min-device-pixel-ratio: 1.5)
  .caviar-merchant-widget-link-disc-1
    display block
    background-image url("https://img.trycaviar.com/raw/widget/v3/caviar-badges-sprite-v3@2x.png")
    background-size 1560px 390px


/**
 * DoorDash widget CSS
 */
.doordash-widget
  display inline-block
  text-decoration none
  width 150px
  height 32px
  font-size 1rem
  margin 5px
  background-image url("https://cdn.doordash.com/media/button/209x45_red.png")
  background-size contain
  background-repeat no-repeat
  color transparent

  &:hover
    color transparent
    opacity 0.75

/**
 * UberEats widget CSS
 */
#ubereats
  &:hover
    opacity 0.75
