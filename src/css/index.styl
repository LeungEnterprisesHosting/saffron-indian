@media screen and (max-width: 1100px) {
  nav .container-fluid {
    position: absolute;
    right: -180px;
    top: 0;
    height: 100vh;
    width: 180px;
    background: rgba(255, 255, 255, .95);
    transition: all 0.3s;
  }
  nav.open .container-fluid {
    right: 0;
  }
  nav .nav {
    padding-top: 15px;
  }
  nav .nav>li {
    text-align: center;
  }
  nav #social, nav .nav>li {
    display: none;
  }
  nav .nav-toggle {
    display: block;
  }
  .nav>li:not(.close-sidebar)>a::after {
    display: none;
  }
  nav .btn-social-container {
    position: absolute;
    bottom: 15px;
    margin-left: 60px;
    text-align: center;
  }
  #about-jumbotron>.container>.col-md-11, #menu-jumbotron>.container>.col-md-11, #lunch-jumbotron>.container>.col-md-11, #press-jumbotron>.container>.col-md-11, #specials-jumbotron>.container>.col-md-11 {
