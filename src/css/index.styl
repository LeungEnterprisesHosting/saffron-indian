body, html {
  min-height: 100%
}
body {
  font-family: 'EB Garamond', Garamond, serif;
  color: #333;
  width: 100%
}
h1, .jumbotron h1 {
  font-family: 'Petit Formal Script', Book Antiqua, Palatino, serif;
  font-size: 5rem;
}
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .8);
  height: 100vh;
  width: 100%;
  /* so that it is higher than the jumbotron */
  z-index: 100;
}
nav {
  padding-top: 30px;
}
@media screen and (min-width: 1101px) {
  nav {
    width: 150px;
    height: 100%;
    text-align: center;
    background: rgba(255,255,255,0.25);
  }
}
nav .nav-toggle {
  display: none;
  position: absolute;
  top: 15px;
  right: 15px;
  border-radius: 0;
  color: #333;
  background: rgba(255,255,255,0.5);
  transition: all 0.3s;
}
nav .nav-toggle:hover {
  background: rgba(255,255,255,0.7);
}
.fa {
  font-style: normal;
}
.fa-1\.5x {
  font-size: 1.5rem;
}
.fa-2x {
  font-size: 2rem;
}
nav .close-sidebar a:hover {
  background: 0 0;
}
nav .nav>li>a {
  display: inline-block;
  text-transform: uppercase;
  padding: 0;
  margin-bottom: 5px;
  font-size: 2rem;
  color: #333;
}
nav .nav>li>a::after {
  content: '';
  width: 0;
  height: 1px;
  background: #333;
  transition: all .3s;
}
nav #social>a, nav .nav>li>a::after {
  display: block;
  -webkit-transition: all .3s;
}
.nav>li:not(.close-sidebar)>a:hover, .nav>li:not(.close-sidebar)>a:active, .nav>li:not(.close-sidebar)>a:focus {
  background: transparent;
}
.nav>li:not(.close-sidebar)>a:hover::after {
  width: 100%
}
nav .nav > li.active > a::after {
  width: 100%;
}
