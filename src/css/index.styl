nav .btn-social-container {
  position: fixed;
  bottom: 25px;
  text-align: center;
  margin-left: 35px;
}
.nav > .btn-social-container > .btn-social {
  margin-right: 15px;
  transition: all 0.3s;
}
.nav > li > a.btn-social:hover {
  color: #337ab7;
}
.nav > li > a.btn-social::after {
  display: none;
}
nav #social > a {
  text-align: center;
  float: right;
  clear: right;
  height: 30px;
  width: 30px;
  border-radius: 15px;
  border: 1px solid #ccc;
  padding: 5px;
  margin-bottom: 7.5px;
  background: #fff;
  color: #000;
  transition: all .3s;
  opacity: .5;
}
#social > a:hover {
  color: white;
  border: 0;
}
#social > a:nth-child(1):hover {
  background: #3b5998 !important;
}
#social > a:nth-child(2):hover {
  background: #00aced !important;
}
.jumbotron, .menu {
  width: 100%
}
nav #social>a:hover {
  opacity: .8;
}
